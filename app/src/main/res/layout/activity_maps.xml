<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.developers.uberanimation.MapsActivity" />

    <ImageView
        android:id="@+id/imgCenterPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/client_pin_centered"/>

    <RelativeLayout
        android:id="@+id/rlSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlFrom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/rlTo"
            android:background="@drawable/selector">

            <EditText
                android:id="@+id/edFrom"
                android:layout_toLeftOf="@+id/btnFrom"
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />

            <Button
                android:layout_alignParentRight="true"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/btnFrom"
                android:text="From"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector">

            <EditText
                android:id="@+id/edTo"
                android:layout_toLeftOf="@+id/btnTo"
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />

            <Button
                android:layout_alignParentRight="true"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/btnTo"
                android:text="To"/>
        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true">

        <ProgressBar
            android:theme="@style/LinearProgress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:indeterminate="true"
            android:layout_height="15dp"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#00000000">

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgLoc"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>